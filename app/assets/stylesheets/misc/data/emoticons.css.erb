.emote {
  margin-left: -4px;
  margin-top: -2px;
  display: block;
  width: 34px;
  height: 32px;
  background: url(/emoticons/all.png);
  font-size: 0;
  vertical-align: bottom;
}
i.emote {
  display: inline-block;
}
#emoticons .emote:hover {
  transform: rotate(15deg);
  filter: blur(0);
}

<% BbcodeHelper.each_tile_asset do |emoticon, tile_x, tile_y| %>
.emote[data-emote="<%= emoticon %>"] {
	background-position: top -<%= tile_y * 32 %>px left -<%= tile_x * 34 %>px;
	
}
<% end %>
