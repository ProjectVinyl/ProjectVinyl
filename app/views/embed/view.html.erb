<html lang="en">
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<title id="document_title">Project Vinyl - Premium Pony Tunes</title>
		<link rel="icon" sizes="160x160" href="/images/favicon.png">
		<script src="https://code.jquery.com/jquery-1.8.3.min.js" id="jquery" ></script>
		<link type="text/css" href="/css/embed.css" rel="stylesheet" />
		<link type="text/css" href="/css/videos.css" rel="stylesheet" />
		<link type="text/css" href="/css/font-awesome.min.css" rel="stylesheet" />
	</head>
	<body>
		<% if @video.hidden %>
		<div id="video" style="background-image: url('/images/default-cover.jpg');" class="video unplayable">
			<div class="player">
				<span class="pause resize-holder">
					<h1 class="resize-target">
						<a><span class="title">Hidden Video</span></a>
					</h1>
				</span>
			</div>
		</div>
		<% else %>
		<div id="video" style="background-image: url('/cover/<%= @video.id %>');" data-title="<%= @video.title %>" data-artist="<%= @artist.name %>" data-<% if @video.audio_only %>audio<% else %>video<% end %>="<%= @video.id %>" data-ext="<%= @video.file + "|" + @video.mime %>" class="video"></div>
		<% end %>
		<script src="/js/videos.js" ></script>
		<script src="/js/script.js" ></script>
		<% if !@video.hidden %>
		<script>
$('#video .player')[0].getPlayerObj().setEmbed('<%= @video.id %>');
		</script>
		<% end %>
	</body>
</html>