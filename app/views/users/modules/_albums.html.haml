%section.page.full-width.recent-uploads
	%h1.title
		Albums
		= surround '(', ')' do
			= number_with_delimiter @albums.count
		%a.right{href: user_albums_path(@user)}
			View All
			= fa :chevron_right
	%ul.album-list.horizontal#albums
		- if @albums.count > 0
			= render partial: 'albums/thumb/normal', collection: @albums.records
		- else
			%li.generic.virtual.keep
