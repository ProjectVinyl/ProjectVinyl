<div id="uploader_frame" class="wrapper page tab-set" style="width:100%">
	<ul class="tab-set tabs">
		<li id="new_tab_button" class="button" title="Add">+</li>
	</ul>
</div>
<div id="template" class="hidden">
	<div data-tab="new[{id}]" class="tab selected">
		<%= form_for(@video, as: "video", url: "ajax/upload", html: {class: "new_video async"}) do |f| %>
			<section class="page tab-set column-left resize-holder uploaded-preview preview-selective">
				<ul class="hidden tab-set tabs">
					<li data-target="thumbpick_{id}" class="button selected">Pick Thumbnail</li>
					<li data-target="thumbupload_{id}" class="button">Upload Image</li>
				</ul>
				<div class="progressor">
					<div class="cover-block">
						<div class="message">
							Uploading...
						</div>
						<div class="progress">
							<div class="fill"></div>
						</div>
					</div>
				</div>
				<div id="upload" class="preview-selective-selected">
					<div class="hidden">
						<div data-tab="thumbpick_{id}" id="video" data-pending="1" class="tab selected video" data-video="0">
							<input class="playlist" id="time" type="text" name="video[time]" value="-1">-1</input>
						</div>
						<div data-tab="thumbupload_{id}" id="cover-upload" class="cover-block tab file-select image-selector" data-type="image">
							<span class="preview"></span>
							<span class="drop-icon">
								<i class="fa fa-picture-o"></i>
								<div>Select Cover Art</div>
							</span>
							<%= f.file_field :cover %>
						</div>
					</div>
					<div id="video-upload" class="shown cover-block file-select video-drop" data-type="a/v">
						<span class="drop-icon">
							<i class="fa fa-upload"></i>
							<div>Select an Audio/Video file to upload</div>
						</span>
						<%= f.file_field :file %>
					</div>
				</div>
				<div class="hidden post description resize-holder">
					<h1 id="video_title" class="title editable post-title resize-target short">
						<span class="content ">Title</span>
						<%= f.text_field :title, class: "input" %>
						<span class="edit"><i class="fa fa-pencil"></i></span>
						<span style="display:none">11</span>
					</h1>
					<%= render layout: 'thread/description_box' do %>
						<%= f.text_area :description, autofocus: true, class: "comment-content" %>
					<% end %>
					<div class="post-tags">
						<%= render layout: 'layouts/tageditor', locals: {tags: nil} do %>
							<%= f.text_area :tag_string %>
						<% end %>
					</div>
					<div class="properties">
						<table>
							<tr>
								<td class="label"><%= f.label :source %></td>
								<td class="field">
									<%= f.text_field :source, class: "input" %>
									<span style="display:none;color:red;" class="info"></span>
								</td>
							</tr>
						</table>
					</div>
					<div class="actions">
						<button id="change_video" class="action" type="button" onclick="$('#video_file').trigger('click');">Change Main File</button>
						<span class="notify bob-holder">
							<div class="bobber bob-left">
								Cover art is required to upload audio files.
							</div>
							<%= f.submit "Upload", class: "action right green" %>
						</span>
					</div>
					<div class="actions">
						<a class="foobar action options"><i class="fa fa-gear"></i> Options</a>
						<a class="foobar action share"><i class="fa fa-share"></i> Share</a>
						<a class="foobar action star"><i class="fa fa-star"></i></a>
						<a class="foobar action like">
							<i class="fa fa-thumbs-up"></i>
						</a>
						<a class="foobar action dislike">
							<i class="fa fa-thumbs-down"></i>
						</a>
						<a class="foobar action report right"><i class="fa fa-flag"></i> Report</a>
					</div>
					<div class="form report" data-offset="0"></div>
				</div>
			</section>
			<section class="page resize-holder column-right right center uploaded-preview preview-selective">
				<span class="preview-selective-selected">
					<%= render partial: 'artist/bio', locals: {user: @user } %>
				</span>
				<section class="hidden">
					<h1 class="resize-target" style="font-size: 16.25px;">
						<a>Include in Albums</a>
					</h1>
					<ul class="queue">
						<% @user.albums.each do |album| %></li class="generic">
							<label class="button">
								<input type="checkbox" name="albums[<%= album.id %>]"></input>
								<i class="fa fa-check"></i>
								<%= album.title %>
							</label>
							<li><% end %>
					</ul>
				</section>
			</section>
		<% end %>
	</div>
</div>
<script>$(document).on('envload', function() {new Uploader();});</script>