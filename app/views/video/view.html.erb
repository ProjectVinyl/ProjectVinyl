<% if @video %>
		<% title @video.title %>
		<%= render partial: 'video' %>
		<div class="page resize-holder column-right right center">
			<section class="artist-bio">
				<span class="avatar">
					<span style="background-image:url('/avatar/<%= @artist.id %>');"></span>
				</span>
				<h1 class="resize-target">
					<a class="name" href="/artist/<%= @artist.id %>-<%= @artist.name %>"><%= @artist.name %></a>
				</h1>
				<div class="bio short"><%= raw emotify @artist.bio %></div>
			</section>
			<section>
				<h1 class="resize-target">
					<a>Discovery Queue</a>
				</h1>
				<ul class="queue">
				<%= render partial: '/layouts/video_thumb_v', collection: @queue %>
				</ul>
			</section>
		</div>
		<section class="page column-left">
			<h1 class="title">Comments</h1>
			<div id="disqus_thread" class="comments">
				<script>
var disqus_config = function () {
  this.page.url = "<%= url_for(action: 'view', controller: 'video', only_path: false) %>";
  this.page.identifier = "<%= @video.id %>";
  this.page.title = "<%= @video.title %> by <%= @artist.name %> - ProjectVinyl";
};
(function() {
  var d = document, s = d.createElement('script');
  s.src = 'https://projectvinyldev.disqus.com/embed.js';
  s.setAttribute('data-timestamp', +new Date());
  (d.head || d.body).appendChild(s);
})();
				</script>
				<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
			</div>
		</section>
<% else %>
<%= render layout: '/layouts/error', locals: { title: 'Nothing to see here!' } do %>
This is not the video you are looking for.
<% end %>
<% end %>