<% if @video %>
		<% title @video.title %>
		<%= render partial: 'video' %>
		<div class="page resize-holder column-right column-mobile-fragmented right center">
			<section class="artist-bio bio">
				<a href="/artist/<%= @artist.id %>-<%= url_safe @artist.name %>">
					<span class="avatar">
						<span style="background-image:url('/avatar/<%= @artist.id %>');"></span>
					</span>
					<h1 class="name resize-target"><%= @artist.name %></h1>
				</a>
				<div class="bio short"><%= raw emotify @artist.bio %></div>
			</section>
			<% if @album %>
			<section class="listing compact playlist column-mobile-shown">
				<div class="controls">
				<% if @prev_video %>
					<a id="playlist_prev" class="slide-left" title="Previous" href="/view/<%= @prev_video.video.id %>-<%= url_safe @prev_video.video.title %>?list=<%= @album.id %>&index=<%= @prev_video.index %>">
						<i class="fa fa-fw fa-step-backward"></i>
					</span>
				<% end %>
				<a class="title<% if @next_video %> buff-right<% end %>" href="/album/<%= @album.id %>-<%= url_safe @album.title %>"><%= @album.title %></a>
				<% if @next_video %>
					<a id="playlist_next" class="slide-right" title="Next" href="/view/<%= @next_video.video.id %>-<%= url_safe @next_video.video.title %>?list=<%= @album.id %>&index=<%= @next_video.index %>">
						<i class="fa fa-fw fa-step-forward"></i>
					</span>
				<% end %>
				</div>
				<div class="scroll-container">
					<div class="items<% if @album_editable %> reorderable<% end %>" data-target="albumitem">
						<%= render partial: '/album/album_item', collection: @items %>
					</div>
				</div>
				<script>
$(document).ready(function() {
  var selected = $('.playlist a.selected');
  if (selected.length) scrollTo(selected, '.playlist .scroll-container');
});
$('html,body').scrollTop(200);
				</script>
			</section>
			<% end %>
			<section>
				<h1 class="resize-target">
					<a>Discovery Queue</a>
				</h1>
				<ul class="queue">
				<%= render partial: '/layouts/video_thumb_v', collection: @queue %>
				</ul>
			</section>
		</div>
		<section class="page column-left">
			<%= render partial: '/thread/view', locals: {identifier: @video.id, title: @video.title + " by " + @artist.name } %>
		</section>
<% else %>
<%= render layout: '/layouts/error', locals: { title: 'Nothing to see here!' } do %>
This is not the video you are looking for.
<% end %>
<% end %>