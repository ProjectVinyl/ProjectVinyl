<% if @video %>
		<% title @video.title %>
		<%= render partial: 'video' %>
		<div class="page resize-holder column-right right center">
			<section class="artist-bio">
				<span class="avatar">
					<span style="background-image:url('/avatar/<%= @artist.id %>');"></span>
				</span>
				<h1 class="resize-target">
					<a class="name" href="/artist/<%= @artist.id %>-<%= @artist.name %>"><%= @artist.name %></a>
				</h1>
				<div class="bio short"><%= raw emotify @artist.bio %></div>
			</section>
			<section>
				<h1 class="resize-target">
					<a>Discovery Queue</a>
				</h1>
				<ul class="queue">
				<%= render partial: '/layouts/video_thumb_v', collection: @queue %>
				</ul>
			</section>
		</div>
		<section class="page column-left">
			<%= render partial: '/layouts/comments', locals: {identifier: @video.id, title: @video.title + " by " + @artist.name } %>
		</section>
<% else %>
<%= render layout: '/layouts/error', locals: { title: 'Nothing to see here!' } do %>
This is not the video you are looking for.
<% end %>
<% end %>