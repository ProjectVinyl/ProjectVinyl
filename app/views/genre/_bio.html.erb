<div class="post">
	<div class="space-fix">
		<span class="genre-icon fa-stack fa-4x">
			<i class="fa fa-circle fa-stack-2x"></i>
			<i class="fa fa-tag fa-inverse fa-stack-1x"></i>
		</span>
		<h1 class="title">
			<a class="name" href="/tag/<%= tag.short_name %>"><%= @tag.name %></a>
		</h1>
		<span class="content bio"><%= tag.description %></span>
		<div class="tag-list">
			<br>Used by <%= tag.video_count %> videos and <%= tag.user_count %> users
		</div>
	</div>
	<% if tag.user %>
	<span class="user-link right" data-id="<%= tag.user.id %>">
		<span class="tag-list">
		Associated User: <a href="<%= tag.user.link %>"><%= @user.username %></a>
		</span>
	</span>
	<% end %>
</div>