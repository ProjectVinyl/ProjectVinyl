<section style="width:100%" class="page resize-holder">
	<div class="post">
		<div class="tile stack left">
			<span <% if @items.second %>style="background-image:url('/cover/<%= @items.second.video.id %>-small.png');"<% end %> class="stack-item item-1">
				<span <% if @items.first %>style="background-image:url('/cover/<%= @items.first.video.id %>-small.png');"<% end %> class="stack-item item-2"></span>
			</span>
		</div>
		<% if @modificationsAllowed %>
			<h1 class="editable short title" data-target="album" data-member="title" data-id="<%= @album.id %>">
				<% if @album.owner_id == current_user.id %>
				<span title="Private - Only you can see this album" class="before"><i class="fa fa-lock"></i></span>
				<% end %>
				<span class="content"><%= @album.title %></span>
				<span class="edit"><i class="fa fa-pencil"></i></span>
			</h1>
			<div class="editable content description" data-target="album" data-member="description" data-id="<%= @album.id %>">
				<span class="content"><%= raw emotify @album.description %></span>
				<span class="edit"><i class="fa fa-pencil" ></i></span>
			</div>
		<% else %>
			<h1 class="title"><%= @album.title %></h1>
			<div class="content description"><%= raw emotify @album.description %></div>
		<% end %>
			<span class="tag-list underline">
				By <a href="<%= @user.link %>"><%= @user.username %></a>
				| <%= number_with_delimiter @items.count %> videos
				| last updated <%= since @album.updated_at %>
			</span>
			<div class="actions">
				<div class="split-button popper">
					<button class="action options pop-out-toggle"><i class="fa fa-gear"></i> Options</button>
					<ul class="pop-out">
					<% if user_signed_in? && current_user.is_admin %>
						<li class="action">
							<a href="/admin/album/<%= @album.id %>">
								<span class="icon"><i class="fa fa-gavel"></i></span>
								<span class="label">Admin</span>
							</a>
						</li>
					<% end %>
					<% if @modificationsAllowed && !@album.hidden %>
						<li class="action">
							<a id="delete_album" data-title="Delete Album" data-icon="warning" data-action="delete" data-url="delete/album/<%= @album.id %>" class="confirm-button">
								<span class="icon"><i class="fa fa-trash"></i></span>
								<span class="label">Remove Album</span>
							</a>
						</li>
					<% end %>
					</ul>
				</div>
				<a class="button action" style="margin-right: 10px;" <% if @items.first %>href="/view/<%= @items.first.video.id %>-<%= @items.first.video.safe_title %>?list=<%= @album.id %>&index=<%= @items.first.index %>"<% end %>><i class="fa fa-play"></i> Play All</a>
			</div>
	</div>
</section>