<% title @thread.title + " - Private Messages" %>
<%= render partial: 'view/breadcrumb', locals: {
	stack: [
		{ link: '/messages', title: 'Messages' }
	],
	title: @thread.get_title
} %>
<%= render layout: 'pagination/paginated', locals: {type: "comments/" + @thread.id.to_s + "/" + @order, paginated: @comments, id: "page"} do %>
<ul id="thread-<%= @thread.id %>" class="comments">
	<%= render partial: 'comment/set', locals: {thread: @comments.records, indirect: false} %>
</ul>
<% end %>
<hr>
<%= render partial: "comment/new", locals: {invert: true} %>
