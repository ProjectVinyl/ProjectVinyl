<li class="generic thumb">
	<a class="thumb" href="/view/<%= video_thumb_h.id %>-<%= video_thumb_h.safe_title %>">
		<div class="tile" style="background-image:url('<%= video_thumb_h.isHiddenBy(current_user) ? 'images/default-cover' : video_thumb_h.tiny_thumb(current_user) %>');">
			<span class="tag-list duration">
				<%= duration video_thumb_h.getDuration %>
			</span>
		</div>
		<div class="title">
			<%= video_thumb_h.isSpoileredBy(current_user) || video_thumb_h.isHiddenBy(current_user) ? "Spoilered" : video_thumb_h.getTitle %>
		</div>
		<span class="date" title="<%= video_thumb_h.created_at %>">
			<%= since video_thumb_h.created_at %>
		</span>
		<span class="tag-list right">
			<% if video_thumb_h.isDownvotedBy(current_user) %>
				<i class="fa fa-thumbs-down red"></i>
			<% end %>
			<% if video_thumb_h.isUpvotedBy(current_user) %>
				<i class="fa fa-thumbs-up green"></i>
			<% end %>
			<%= number_with_delimiter video_thumb_h.views %> views
		</span>
	</a>
</li>