- cache(comment.cache_key_with_user(current_user, indirect), expires_in: 1.minute) do
	%li.comment.transitional{class: [comment.hidden && "deleted", indirect && "indirect"],
						id: comment.oref,
						"data-user": comment.user.username}
		= render partial: comment.hidden ? 'comments/guts_hidden' : 'comments/guts', locals: {comment: comment, indirect: indirect}
