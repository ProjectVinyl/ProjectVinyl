%section.page.properties.column-left
	%h1 Ownership
	= form_for(@video, as: "item", url: "/admin/transfer?type=video", html: { method: :put }) do |f|
		= f.text_field :id, hidden: true
		%table
			%tr
				%td.label= f.label "Current Owner"
				%td.field(colspan="2")
					%a.user-link{"data-id": @user.id, href: @user.link}
						= "#{@user.username} #{@user.id})"
			%tr
				%td.label= f.label "New Owner"
				%td.field.popper.auto-lookup(data-action="/find/users")
					= f.text_field :user_id, autocomplete: "off"
					%ul.pop-out
				%td.field= f.submit "Transfer Ownership", class: "green"
