%h1.title.resize-target
	= fa :user
	Recent Activity
.listing.compact
	.items
		.row.heads
			%div Name
			%div Created
			%div Updated
			%div Last Active
			%div Votes
			%div Sign ins
		- @users.records.each do |user|
			%a.row{href: admin_user_path(user)}
				%div
					= user.username
					= surround '(', ')' do
						= user.id
				%div{title: localise(user.created_at)}= since user.created_at
				%div{title: localise(user.updated_at)}= since user.updated_at
				- if user.last_active_at.nil?
					%div null
				- else
					%div{title: localise(user.last_active_at)}= since user.last_active_at
				%div= user.votes.count
				%div= user.sign_in_count
