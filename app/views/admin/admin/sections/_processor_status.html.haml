%h1.title.resize-target Processor Status
- begin
	.listing.compact
		.items
			.row
				%div
					Jobs in queue: 
					= Resque.info[:pending]
					Total workers: 
					= Resque.info[:workers]
				%div
			- Resque.workers.each_with_index do |worker, i|
				- payload = worker.job.dig("payload", "args")
				- payload = "#{payload[0]["job_class"]}: #{payload[0]["arguments"]}" if payload
				%a.row{href: "/admin/resque"}
					%div
						%span.active-icon{class: worker.working? && "active"}
						= precede '#' do
							= i+1
					%div= payload || "No Task"
- rescue
	%p Oops! Could not connect to Resque.
%hr/
%button.action.blue{type: "button", data: {method: "put", confirm: "", url: "/admin/verify/videos", title: "Verify Video Files"}}
	= fa :wrench
	Verify Videos
%button.action.blue{type: "button", data: {method: "put", confirm: "", url: "/admin/verify/users", title: "Verify User Files"}}
	= fa :wrench
	Verify Users
