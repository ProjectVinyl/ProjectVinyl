<% flash.each do |key,value| %>
	<p class="notice removeable <%= key %>"><%= value %> <a class="remove right red"><i class="fa fa-close"></i></a></p>
<% end %>
<% cache('site_notices', expires_in: 1.minute) do %>
	<% SiteNotice.where(active: true).each do |notice| %>
	<p class="notice removeable"><%= raw notice.html_message %> <a class="remove right red"><i class="fa fa-close"></i></a></p>
	<% end %>
<% end %>