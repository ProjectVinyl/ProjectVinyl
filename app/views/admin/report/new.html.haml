= title "Reporting"
= lim "1100px"
%section.page.full-width
	%h1
		Report Content
	%ul(class="#{@reportable.reportable_class.downcase}-list")
		- if @reportable.class == Video
			- @video = @reportable
			.center= render 'video/video'
		- else
			= render 'comment/comment', comment: @reportable, indirect: true
	.properties.ribbed.slide-group.slide-holder(data-offset="0")
		= render 'admin/report/new', @repot
