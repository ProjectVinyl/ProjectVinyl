- title "Admin"
- lim "1100px"
%section.page.full-width.resize-holder.listing.compact.limit-overflow
	%h3
		- @public.parent.each_with_index do |part,index|
			- if index > 0
				%i.fa.fa-chevron-right
			- if part[:last]
				= part[:name]
			- else 
				%a{href: admin_files_path(p: part[:path].join('/'))}= part[:name]
		- if @video
			%ul.horizontal
				= render partial: 'videos/thumb_h', locals: {thumb_h: @video}
	.infinite-page.items#files{data: {url: admin_files_path, path: @public.full_path, "start-ref": @public.start_ref, ref: @public.end_ref}}
		.row.header
			%div Name
			%div(style="width:10%") Type
		= render partial: "file", collection: @public.items
