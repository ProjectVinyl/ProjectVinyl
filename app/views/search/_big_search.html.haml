%form#big-search(action="#{search_path}" method="get")
	%span
		%input.full-width(name="query" type="search" placeholder="Title" title="Search by title (alias for title:{search_term})" value="#{@title_query}")
	%span#search_tags{class: (@type == 1 || @type == 3) && "hidden"}
		%input.full-width(name="tagquery" type="search" placeholder="Tags" style="margin-top:10px" title="Search by one or more tags" value="#{@tag_query}")
		= render partial: 'search/big_search_explanation'
	%span.search-options
		%label
			%span Type
			%div
				%select#search_type(name="type")= sensible_option_for_select %w[ Song Album User Tag ], @type
		%label
			%span Order
			%div
				%select(name="order")= sensible_option_for_select %w[ Descending Ascending ], @ascending ? 1 : 0
		%label
			%span Order By
			%div
				%select(name="orderby")= sensible_option_for_select %w[ - Date Rating Length Random Relevance ], @orderby
	%span
		%button(type="submit")
			= fa :search
			Search
