- title "Notifications"
- lim "900px"
%section.page.full-width.properties
	%h1.title
		Notifications
		= surround '(', ')' do
			= current_user.notifications.length
	%ul.notifications
		- if @all.length > 0
			- @all.group_by(&:period).each do |week, n|
				%span.group
					%h4{title: n.first.created_at.strftime("%d %B %Y")}= week
					= render partial: "notification", collection: n
		.empty-msg.center You have no unread notifications
