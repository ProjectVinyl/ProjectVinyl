%li.generic.thumb
	%a.thumb{href: thumb_f.link}
		.tile(style="background-image:url('#{thumb_f.hidden_by?(current_user) ? 'images/default-cover' : thumb_f.tiny_thumb(current_user)}');")
			%span.tag-set.duration= duration thumb_f.duration
		.title= thumb_f.filtered_by?(current_user) ? "Spoilered" : thumb_f.get_title
		%span.date{title: thumb_f.created_at.in_time_zone}= since thumb_f.created_at
		%span.tag-set.right
			- if thumb_f.liked?
				= fa "thumbs-#{thumb_h.disliked? ? 'down red' : 'up green'}"
			= fuzzy_big_number_with_delimiter thumb_f.play_count
			views
