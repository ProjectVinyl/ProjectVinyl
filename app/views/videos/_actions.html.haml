.actions.actions-above-content
	= render partial: user_signed_in? ? 'videos/actions_logged_in' : 'videos/actions_logged_out'
	%span.divider>
	%button.action.share.mobile-friendly.slider-toggle(title="Share Video" data-target=".slideout.share")>
		= fa :share
		%span Share
	= render partial: 'videos/downloads'
	.split-button.popper>
		%button.action.options.mobile-friendly.pop-out-toggle(title="Options")= fa :gear
		%ul.pop-out
			%a.action.slider-toggle(data-target=".slideout.info")
				%span.icon= fw :info
				%span.label File Info
			%a.action{href: video_statistics_path(@video)}
				%span.icon= fw :bar_chart
				%span.label Statistics
			%a.action{href: video_changes_path(@video)}
				%span.icon= fw :history
				%span.label Changes
			- if @modifications_allowed
				%span.divider
				%a.action{href: edit_video_path(@video)}
					%span.icon= fw :pencil
					%span.label Edit Video
			%span.divider
			- if user_signed_in? && current_user.is_contributor?
				%a.action{href: admin_video_path(@video)}
					%span.icon= fw :gavel
					%span.label Admin
			%a.action{href: new_admin_report_path(@video.reportable_hash)}
				%span.icon= fw :warning
				%span.label Report Video
= render partial: 'videos/share'
= render partial: 'videos/info'
