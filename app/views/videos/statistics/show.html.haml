- title @video.title
%section.page.full-width
	- cache(@video, expires_in: 30.minutes) do
		= render 'videos/statistics/stat_bar', records: @video.votes.up, title: 'Upvotes'
		= render 'videos/statistics/stat_bar', records: @video.votes.down, title: 'Downvotes'
		= render 'videos/statistics/stat_bar', records: @video.tag_histories, title: 'Tag Changes'
