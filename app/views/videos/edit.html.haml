- lim 'calc(min(85vw, 1800px))'
.page.slim.full-width.tab-set#uploader_frame(data-tab-template="#tab-template" data-content-template="#template")
	%ul.tab-set.tabs.uploader-frame-tab-bar.sticky-overlay.stick-top
		%li.button.selected(data-target="new[0]")
			%span.progress
				%span.fill
			%span.label
				Editing
				= @video.title
			= fa :close
			= fa :undo
		%li.button#new_tab_button(title="Add") +
	.tab.selected(data-tab="new[0]")
		= render partial: 'videos/form/uploader_frame_content', locals: {video: @video, tab_id: 0}
= render partial: 'videos/form/uploader_frame_content_template'
