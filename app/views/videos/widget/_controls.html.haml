.controls.playback-controls
	.thumb.floating-player-details
		.tile
			%img(loading="lazy"){src: @video.tiny_thumb(current_user, current_filter)}
		.title= @video.title
	%ul
		%li.icon.play(tabindex="0")
			%span.indicator(tabindex="-1" title="Pause")= fa :play
			%span.indicator(tabindex="-1" title="Play")= fa :pause
		%li.icon.volume(tabindex="0")
			%span.indicator(tabindex="-1" title="Toggle Mute")= fa :volume_up
			.slider.slider-control(tabindex="-1")
				.bars.load
					%span.fill
				%span.bob
		%li.track.slider-control(tabindex="0")
			.bars.load(tabindex="-1")
			.bars(tabindex="-1")
				%span.fill
				%span.cursor-fill
			.bars.chapters(tabindex="-1")
			.previewer(tabindex="-1")
			%span.bob(tabindex="-1")
		%li.icon.timer
			%span.current 00:00
			= '/'
			%span.total= duration @video.duration, allow_zero: true
		%li.icon.maximise(tabindex="0")
			%span.indicator(tabindex="-1" title="Wide Screen")= fa :tv
		%li.icon.fullscreen(tabindex="0")
			%span.indicator(tabindex="-1" title="Full Screen")= fa :expand
			%span.indicator(tabindex="-1" title="Exit Full Screen")= fa :compress
.hidden.transitional
	= fa :restore
	= fa :volume_mid
