- title @video.title
= render partial: 'video'
.page.seamless.resize-holder.column-right.right.center.fixed-right-column{class: @album && "column-mobile-fragmented"}
	- if @album
		= render partial: 'albums/inline'
	= render partial: 'recommendations'
= render partial: 'description'
%section.page.seamless.column-left.fixed-right-column#comment_section
	= render partial: 'forums/threads/view', locals: {identifier: @video.id, title: "#{@video.title} by #{@user.username}" }
= render partial: 'sellout/aj_donate_plz_wide'
