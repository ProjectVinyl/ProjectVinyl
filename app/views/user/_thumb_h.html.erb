<li class="bio">
	<a href="<%= thumb_h.link %>">
		<span class="avatar">
			<span style="background-image: url('<%= thumb_h.avatar %>');"></span>
		</span>
		<h2<% if thumb_h.banned? %> class="banned"<% end %>>
			<%= thumb_h.username %>
		</h2>
		<span class="tag-list">
			<%= render partial: 'badge/badges', locals: {user: thumb_h} %>
		</span>
	</a>
	<div class="tag-list">
		<%= number_with_delimiter thumb_h.videos.length %> video<%= thumb_h.videos.length == 1 ? "" : "s" %>
		| 
		<%= number_with_delimiter thumb_h.albums.length %> album<%= thumb_h.albums.length == 1 ? "" : "s" %>
	</div>
	<br>
	<%= render partial: 'tag/taglist', locals: { collection: thumb_h.tags.limit(3) } %>
</li>