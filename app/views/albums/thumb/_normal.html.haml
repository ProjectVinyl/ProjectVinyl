%li.generic
	%a.album{href: normal.link}
		%span.tile.stack= render 'albums/tile_stack', items: normal.album_items.order(:index)
		.title
			= render 'albums/visibility', album: normal
			= normal.title
		%span.date{title: localise(normal.created_at)}= since normal.created_at
		%span.tag-set.right
			=normal.album_items.count
			Videos
