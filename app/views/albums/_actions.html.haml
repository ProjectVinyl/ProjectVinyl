.actions
	- if user_signed_in?
		.split-button.popper>
			%button.action.options.pop-out-toggle
				= fa :gear
				Options
			%ul.pop-out
				- if current_user.is_contributor?
					%li.action
						%a(href="/admin/albums/#{@album.id}")
							%span.icon= fa :gavel
							%span.label Admin
				- if @modifications_allowed && !@album.hidden
					%li.action
						%a#delete_album(href="/albums/#{@album.id}" data-confirm data-title="Delete Album" data-method="delete")
							%span.icon= fa :trash
							%span.label Remove Album
				- if @modifications_allowed
					%li.action
						%a(data-title="Album Settings" data-external-form="/albums/#{@album.id}/edit")
							%span.icon= fa :cog
							%span.label Settings
	%a.button.action{style: "margin-right: 10px", href: @items.records.first && @items.records.first.link}>
		= fa :play
		Play All
