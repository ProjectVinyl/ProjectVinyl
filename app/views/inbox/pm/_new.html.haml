= form_for(@thread, as: :thread, url: messages_path, method: "post") do |f|
	.properties
		%table
			%tr
				%td.label= f.label "To"
				%td.field.popper
					= render 'users/editor', value: @user ? [@user] : [] do
						= f.text_area "recipient", value: @user ? @user.username : ""
			%tr
				%td.label= f.label "Subject"
				%td.field= f.text_field :title, autofocus: true, placeholder: "[no subject]"
			%tr
				%td.field(colspan="2")
					= render layout: 'comments/description_box' do
						= f.text_area :description, class: "comment-content"
	.foot= f.submit "Send", class: "green confirm right"
