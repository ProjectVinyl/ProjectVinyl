- title "Forums"
.actions.space-fix
	- if user_signed_in? && current_user.is_contributor?
		%button.action.mobile-friendly.green(data-external-form="/boards/new" data-title="Create Category" type="button")
			= fa :plus
			%span New Category
	%a.button.mobile-friendly.blue.right(href="/forum/search")
		= fa :search
		%span Find Post
%hr/
%section.page.full-width
	%h1
		Categories
		= "(#{number_with_delimiter @boards.count})"
	= render layout: 'pagination/paginated', locals: {type: 'boards', paginated: @boards, id: "page"} do
		%section.search-result
			.listing.thread-list
				%ul.items= render partial: 'thumb', collection: @boards.records
