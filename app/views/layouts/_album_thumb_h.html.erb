<li class="generic">
	<% @items = album_thumb_h.album_items.order(:index) %>
	<a class="album" href="/album/<%= album_thumb_h.id %>-<%= album_thumb_h.safe_title %>">
		<span class="tile stack">
			<span <% if @items.second %>style="background-image:url('/cover/<%= @items.second.video.id %>-small.png');"<% end %> class="stack-item item-1">
				<span <% if @items.first %>style="background-image:url('/cover/<%= @items.first.video.id %>-small.png');"<% end %> class="stack-item item-2"></span>
			</span>
		</span>
		<div class="title"><%= album_thumb_h.title %></div>
		<span class="date" title="<%= album_thumb_h.created_at %>"><%= raw since album_thumb_h.created_at %></span>
	</a>
</li>