<a class="thumb<% if video_thumb_i.hidden %> thumb-hidden<% end %>" href="<%= video_thumb_i.link %>#comment_<%= comment %>">
	<div class="tile" style="background-image:url('<%= video_thumb_i.tiny_thumb(current_user) %>');">
		<span class="tag-list duration">
			<%= duration video_thumb_i.getDuration %>
		</span>
	</div>
	<div class="title"<% if !(spoilered = video_thumb_i.isSpoileredBy(current_user)) %> title="<%= video_thumb_i.getTitle %>"<% end %>>
		<%= spoilered ? "Spoilered" : video_thumb_i.getTitle %>
	</div>
</a>