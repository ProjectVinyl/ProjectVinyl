<div class="tag-editor">
	<span class="value">
		<%= yield %>
	</span>
	<ul class="tags"><% if tags %><% tags.includes(:tag_type, :alias).each do |tag| %><% tag = tag.alias || tag %><li class="tag tag-<%= tag.namespace %>">
		<i title="Remove Tag" data-name="<%= tag.get_as_string %>" class="fa fa-times remove">
		</i><a href="/tags/<%= tag.short_name %>"><%= tag.get_as_string %></a>
		<span><% if user_signed_in? %>
		<% if current_user.hides([tag.id]) %>H<% end %>
		<% if current_user.spoilers([tag.id]) %>S<% end %>
		<% if current_user.watches(tag) %>W<% end %>
		<% end %></span>
	</li><% end %><% end %></ul>
	<input class="tag input" type="text" placeholder="Tag list..." ></input>
	<ul class="search-results pop-out">
	</ul>
</div>