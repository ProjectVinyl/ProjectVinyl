<li class="bio">
	<span class="avatar">
		<span style="background-image: url('/avatar/<%= artist_thumb_h.id %>');"></span>
	</span>
	<div class="description">
		<a href="/artist/<%= artist_thumb_h.id %>-<%= url_safe artist_thumb_h.name %>">
			<h2><%= artist_thumb_h.name %></h2>
		</a>
		<div class="tag-list">
			
			<%= artist_thumb_h.videos.length %> video<%= artist_thumb_h.videos.length == 1 ? "" : "s" %>
			| 
			<%= artist_thumb_h.albums.length %> album<%= artist_thumb_h.albums.length == 1 ? "" : "s" %>
		</div>
		<br>
		<%= render partial: '/layouts/taglist', locals: { collection: artist_thumb_h.genres.limit(3) } %>
	</div>
</li>