<li class="generic">
		<a class="thumb" style="background-image:url('/cover/<%= video_thumb_h.hidden ? 0 : video_thumb_h.id %>');" href="/view/<%= video_thumb_h.id %>-<%= url_safe video_thumb_h.title %>">
			<span class="tag-list duration">
				<%= duration video_thumb_h.getDuration %>
			</span>
		</a>
		<div class="title">
			<%= video_thumb_h.getTitle %>
		</div>
		<span class="date" title="<%= video_thumb_h.created_at %>">
			<%= since video_thumb_h.created_at %>
		</span>
		<span class="tag-list right">
			<%= number_with_delimiter video_thumb_h.views %> views
		</span>
</li>