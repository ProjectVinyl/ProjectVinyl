%nav.header.layer-foreground
	%ul
		%li.albums{class: selected_path?('albums')}>
			%a(href="/albums")
				= fw :picture_o
				%span Albums
		%li.artists{class: selected_path?('videos')}>
			%a(href="/videos")
				= fw :play
				%span Videos
				%span.icon<>= fa :caret_down
			%ul.drop-down
				%li
					%a(href="/search?tagquery=*&type=0&random=y")
						%span.icon= fw :random
						%span.label Random
		%li.forum{class: selected_path?('forum')}>
			%a(href="/forum")
				= fw :users
				%span Forums
				%span.icon<>= fa :caret_down
			%ul.drop-down
				- Board.all.each do |board|
					%li
						%a{href: board.link}
							%span.icon
							%span.label=board.title
				%li.divider
				%li
					%a(href="/users")
						%span.icon= fw :user
						%span.label Users
				%li
					%a(href="/forum/search")
						%span.icon= fw :search
						%span.label Find Posts
		%li.genres{class: selected_path?('tags')}>
			%a(href="/tags")
				= fw :tags
				%span Tags
				%span.icon<>= fa :caret_down
			%ul.drop-down
				%li
					%a(href="/users")
						%span.icon= fw :tag
						%span.label Aliased
				%li
					%a(href="/users")
						%span.icon= fw :tag
						%span.label Implied