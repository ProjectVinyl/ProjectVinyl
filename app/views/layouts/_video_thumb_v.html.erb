<li class="generic">
	<a class="thumb" style="background-image:url('/cover/<%= video_thumb_v.hidden ? 0 : video_thumb_v.id %>');" href="/view/<%= video_thumb_v.id %>-<%= url_safe video_thumb_v.title %>">
		<div class="details">
			<div class="title"><%= video_thumb_v.getTitle %></div>
			<div class="published detail"><%= since video_thumb_v.created_at %></div>
			<div class="views detail"><%= number_with_delimiter video_thumb_v.views %> views</div>
		</div>
		<span class="tag-list duration">
			<%= duration video_thumb_v.getDuration %>
		</span>
	</a>
</li>