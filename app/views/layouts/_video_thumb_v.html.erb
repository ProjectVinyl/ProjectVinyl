<% if !video_thumb_v.isHiddenBy(current_user) %><li class="generic">
	<a class="thumb<% if video_thumb_v.hidden %> thumb-hidden<% end %>" href="<%= video_thumb_v.link %>">
		<div class="tile" style="background-image:url('<%= video_thumb_v.tiny_thumb(current_user) %>');">
			<div class="details">
				<div class="title"<% if !(spoilered = video_thumb_v.isSpoileredBy(current_user)) %> title="<%= video_thumb_v.getTitle %>"<% end %>>
					<% if video_thumb_v.hidden %>
						<span title="Private - Only you can see this item" class="icon"><i class="fa fa-lock"></i></span>
					<% end %>
					<%= spoilered ? "Spoilered" : video_thumb_v.getTitle %>
				</div>
				<div class="published detail"><%= since video_thumb_v.created_at %></div>
				<div class="views detail"><%= number_with_delimiter video_thumb_v.views %> views</div>
			</div>
			<span class="tag-list duration">
				<% if video_thumb_v.isDownvotedBy(current_user) %>
					<i class="fa fa-thumbs-down red"></i>
				<% end %>
				<% if video_thumb_v.isUpvotedBy(current_user) %>
					<i class="fa fa-thumbs-up green"></i>
				<% end %>
				<%= duration video_thumb_v.getDuration %>
			</span>
		</div>
	</a>
</li><% end %>