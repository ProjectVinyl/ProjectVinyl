<!DOCTYPE html>
<html lang="en">
<head>
	<title id="document_title"><%= content_for?(:title) ? content_for(:title) + " - Project Vinyl" : "Project Vinyl - Premium Pony Tunes" %></title>
	<link type="text/css" href="/css/font-awesome.min.css" rel="stylesheet" />
	<link type="text/css" href="/css/base.css" rel="stylesheet" />
	<link type="text/css" href="/css/videos.css" rel="stylesheet" />
	<script src="https://code.jquery.com/jquery-1.8.3.min.js" id="jquery" ></script>
	<%= csrf_meta_tags %>
	<script>var emoticons = <%= raw emoticons %>;</script>
	<%= content_for(:metadata) %>
</head>
<body>
	<header class="header">
		<div id="banner">
			<a href="/" class="title"><img src="/images/logo.svg"></img></a>
			<form action="/search" method="get">
				<div id="search">
					<div class="select">
						<select name="type">
							<option value="0">Song</option>
							<option value="1">Album</option>
							<option value="2">User</option>
							<option value="3">Tag</option>
						</select>
					</div>
					<input type="text" name="query" placeholder="search"></input>
					<button type="submit"><i class="fa fa-search" ></i></button>
				</div>
			</form>
			<div id="login" <% if user_signed_in? %>class="drop-down-holder"<% end %>>
				<% if user_signed_in? %>
				<a href="<%= current_user.link %>" class="username">
					<%= current_user.username %>
				</a>
				<a class="notices-bell" href="/notifications">
					<i class="fa fa-bell"></i>
					<% if current_user.notification_count > 0 %>
						<span class="count"><%= current_user.notification_count %></span>
					<% end %>
				</a>
				<ul class="drop-down" style="z-index:2">
					<% if current_user.is_admin %>
					<li>
						<a href="/admin" rel="nofollow">
							<span class="icon"><i class="fa fa-fw fa-gavel"></i></span>
							<span class="label">Admin</span>
						</a>
					</li>
					<% end %>
					<li>
						<a href="<%= current_user.link %>" rel="nofollow" title="settings">
							<span class="icon"><i class="fa fa-fw fa-user"></i></span>
							<span class="label">Profile</span>
						</a>
					</li>
					<li>
						<a href="/upload" rel="nofollow" title="upload">
							<span class="icon"><i class="fa fa-fw fa-upload"></i></span>
							<span class="label">Upload</span>
						</a>
					</li>
					<li>
						<a href="/stars">
							<span class="icon"><i class="fa fa-fw fa-star" ></i></span>
							<span class="label">Stars</span>
						</a>
					</li>
					<li>
						<a href="/users/edit" rel="nofollow" title="settings">
							<span class="icon"><i class="fa fa-fw fa-cog"></i></span>
							<span class="label">Settings</span>
						</a>
					</li>
					<li>
						<a id="sign-out" href="/users/sign_out" rel="nofollow" title="sign out">
							<span class="icon"><i class="fa fa-fw fa-sign-out"></i></span>
							<span class="label">Sign Out</span>
						</a>
					</li>
				</ul>
				<a href="/users/edit" rel="nofollow" title="settings">
					<span class="avatar small">
						<span style="background-image:url('<%= current_user.avatar %>');"></span>
					</span>
				</a>
				<script>
				$(document).ready(function() {
					$('#sign-out').on('click', function(e) {
						e.preventDefault();
						ajax.delete($(this).attr('href'), function() {
							document.location.href = '/';
						}, 1);
						e.stopPropagation();
					});
				});
				</script>
				<% else %>
				<a href="/users/sign_in"><i class="fa fa-sign-in"></i> Sign-in</a>
				<% end %>
			</div>
		</div>
		<ul>
			<li class="albums<% if params[:action] == 'albums' %> selected<% end %>"><a href="/albums">Albums</a></li>
               		<li class="artists<% if params[:action] == 'videos' %> selected<% end %>"><a href="/videos">Videos</a></li>
			<li class="genres<% if params[:action] == 'tags' %> selected<% end %>"><a href="/tags">Tags</a></li>
		</ul>
	</header>
	<main class="wrapper" style="<%= content_for?(:width) ? ' max-width:' + content_for(:width) + ';' : '' %>">
		<% if notice %><p class="notice"><%= notice %></p><% end %>
		<% if alert %><p class="notice"><%= alert %></p><% end %>
		<%= yield %>
		<span class="push"></span>
	</main>
	<footer>
		<a title="Home" href="/">projectvinyl.com</a>
		<span class="date">Page generated in <span><%= load_time %> seconds</span></span>
		<div>
			<a href="/staff">Staff</a>
			<a href="/policy">Policy</a>
			<a href="/copyright">Copyright</a>
		</div>
		<span>© 2016 Project Vinyl Foundation</span>
	</footer>
	<div class="fades"></div>
	<script src="/js/videos.js" ></script>
	<script src="/js/script.js" ></script>
</body>
</html>
